""""""""""""""""""""""""""""""""""""""
"Quickly Run
"""""""""""""""""""""""""""""""""""""
map <F4> :call CompileRunGcc()<CR>
fun! CompileRunGcc()
	exec "w"
if &filetype == 'C'
	exec "!g++ % -o %<"
	exec "!time ./%<"
elseif &filetype == 'cpp'
	exec "!g++ %  -o %<"
	exec "!time ./%<"
elseif &filetype == 'java'
	exec "!java %"
	exec "!time java %<"
elseif &filetype == 'sh'
	:!time bash %
elseif &filetype == 'python'
	exec "!time /usr/bin/env python3 %"
elseif &filetype == 'go'
	exec "!go build %<"
	exec "!time go run %"
elseif &filetype == 'mkd'
	exec "!~/.vim/markdown.pl % > %.html &"
	exec "!chromium %.html &"
endif
endfunc





